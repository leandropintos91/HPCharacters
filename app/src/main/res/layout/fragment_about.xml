<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_background">

    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:navigationIconTint="@color/default_text"
            app:title="About"
            app:titleTextColor="@color/default_text"
            android:background="@color/hp_black"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/about_title"
        android:textColor="@color/default_text"
        android:layout_marginVertical="16sp"
        android:textSize="32sp"
        android:layout_marginHorizontal="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_description"
        android:textColor="@color/default_text"
        android:layout_marginVertical="16sp"
        android:textSize="18sp"
        android:lineSpacingMultiplier="1.25"
        android:layout_marginHorizontal="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_text"
        android:layout_marginHorizontal="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/credits_title"
        android:textColor="@color/default_text"
        android:layout_marginVertical="16sp"
        android:textSize="32sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credits_description"
        android:textColor="@color/default_text"
        android:layout_marginVertical="16sp"
        android:textSize="18sp"
        android:lineSpacingMultiplier="1.25"
        android:layout_marginHorizontal="16sp" />

</LinearLayout>