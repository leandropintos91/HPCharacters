<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:navigationIconTint="@color/default_text"
            app:title="Character details"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        android:textSize="32dp"/>

    <ImageView
        android:id="@+id/character_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/character_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintWidth_percent="0.4"/>

    <TextView
        android:id="@+id/character_house"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Ravenclaw"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/character_picture"
        app:layout_constraintBottom_toTopOf="@id/character_ancestry"
        app:layout_constraintStart_toEndOf="@id/character_picture"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:id="@+id/character_ancestry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Half-blood"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/character_house"
        app:layout_constraintEnd_toEndOf="@id/character_house"
        app:layout_constraintStart_toStartOf="@id/character_house"
        app:layout_constraintBottom_toBottomOf="@id/character_picture"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/character_is_wizard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_picture"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        tools:text="Is wizard: Yes"/>

    <ImageView
        android:id="@+id/character_is_favourite"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="32dp"
        android:src="@drawable/ic_no_favourite"
        android:background="@color/default_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>