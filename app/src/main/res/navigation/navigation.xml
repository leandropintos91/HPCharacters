<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.lrp.hpcharacters.ui.MainFragment">
        <action
            android:id="@+id/navigate_to_about_fragment"
            app:destination="@id/about_fragment" />

        <action
            android:id="@+id/navigate_to_character_details_fragment"
            app:destination="@id/character_details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/about_fragment"
        android:name="com.lrp.hpcharacters.ui.AboutFragment"/>

    <fragment
        android:id="@+id/character_details_fragment"
        android:name="com.lrp.hpcharacters.ui.CharacterDetailsFragment"/>

</navigation>